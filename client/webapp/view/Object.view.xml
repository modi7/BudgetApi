<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.m.semantic" xmlns:core="sap.ui.core" xmlns:table="sap.ui.table" xmlns:form="sap.ui.layout.form" xmlns:viz="sap.viz.ui5.controls" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds" xmlns:viz.data="sap.viz.ui5.data" xmlns:u="sap.ui.unified" controllerName="budget.controller.Object">
	<semantic:FullscreenPage id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>objectTitle}" busy="{objectView>/busy}" busyIndicatorDelay="{objectView>/delay}" enableScrolling="false" class="sapUiContentPadding">
		<semantic:content>
			<ObjectHeader id="objectHeader" title="{Description}" number="{ path: 'Solde', type:'sap.ui.model.type.Float', formatOptions: { minFractionDigits: 2, maxFractionDigits: 2 } }" numberUnit="€" backgroundDesign="Transparent" icon="sap-icon://loan" condensed="true" fullScreenOptimized="true" numberState="{path:'Solde', formatter:'.formatter.soldeState'}">
				<attributes>
					<ObjectAttribute active="false" id="__attribute39" text="{Name}"/>
				</attributes>
			</ObjectHeader>
			<!--i5V7KgMm-->
			<HBox displayInline="true" fitContainer="true" justifyContent="SpaceBetween" height="82%">
				<items>
					<VBox width="50%" id="__hbox0" class="vboxStyle">
						<items>
							<form:SimpleForm editable="true" layout="ResponsiveGridLayout" breakpointM="300" width="100%" labelSpanM="4" labelSpanL="6" id="detailPanel" class="backgroundForm" labelMinWidth="100">
								<form:content>
									<!--<core:Title text="Résumé"/>-->
									<Label text="Année"/>
									<ComboBox items="{appView>/years}" maxWidth="" selectedKey="{objectView>/year}" selectionChange="onSelectionChange">
										<items>
											<core:ListItem text="{appView>description}" key="{appView>id}"/>
										</items>
									</ComboBox>
									<Label text="Mois"/>
									<ComboBox items="{appView>/months}" maxWidth="" selectedKey="{objectView>/month}" selectionChange="onSelectionChange">
										<items>
											<core:ListItem text="{appView>description}" key="{appView>id}"/>
										</items>
									</ComboBox>
									<Label text="Solde début du mois"/>
									<ObjectNumber number="{ path: 'SoldeDebut', type:'sap.ui.model.type.Float', formatOptions: { minFractionDigits: 2, maxFractionDigits: 2 } }" numberUnit="€" textAlign="End" class="numberFormat"/>
									<Label text="Ressources"/>
									<ObjectNumber number="{ path: 'Entrees', type:'sap.ui.model.type.Float', formatOptions: { minFractionDigits: 2, maxFractionDigits: 2 } }" numberUnit="€" textAlign="End" class="numberFormat"/>
									<Label text="Dépenses"/>
									<ObjectNumber number="{ path: 'Depense', type:'sap.ui.model.type.Float', formatOptions: { minFractionDigits: 2, maxFractionDigits: 2 } }" numberUnit="€" textAlign="End" class="numberFormat"/>
									<Label text="Dont carte"/>
									<ObjectNumber number="{ path: 'Carte', type:'sap.ui.model.type.Float', formatOptions: { minFractionDigits: 2, maxFractionDigits: 2 } }" numberUnit="€" textAlign="End" class="numberFormat"/>
									<Label text="Epargne"/>
									<ObjectNumber number="{ path: 'Epargne', type:'sap.ui.model.type.Float', formatOptions: { minFractionDigits: 2, maxFractionDigits: 2 } }" numberUnit="€" textAlign="End" class="numberFormat"/>
									<Label text="Solde encours"/>
									<ObjectNumber number="{ path: 'SoldeInt', type:'sap.ui.model.type.Float', formatOptions: { minFractionDigits: 2, maxFractionDigits: 2 } }" numberUnit="€" textAlign="End" class="numberFormat"/>
									<Label text="Solde "/>
									<ObjectNumber number="{ path: 'SoldeFin', type:'sap.ui.model.type.Float', formatOptions: { minFractionDigits: 2, maxFractionDigits: 2 } }" numberUnit="€" textAlign="End" class="numberFormat" state="{path:'SoldeFin', formatter:'.formatter.soldeState'}"/>
								</form:content>
							</form:SimpleForm>
							<!--<viz:Popover id="idPopOver"/>-->
							<viz:VizFrame id="idVizFrame" uiConfig="{applicationSet:'fiori'}" height="400px" width="100%" vizType="pie" selectData="onSelectData" deselectData="onDeselectData">
								<viz:dataset>
									<viz.data:FlattenedDataset data="{ path: 'Repartitions', sorter:{path:'DescAffectation'}}" id="vizData">
										<viz.data:dimensions>
											<viz.data:DimensionDefinition name="Type" value="{DescAffectation}"/>
										</viz.data:dimensions>
										<viz.data:measures>
											<viz.data:MeasureDefinition name="Débit" value="{Debit}" displayValue="{DescAffectation}"/>
										</viz.data:measures>
										<viz.data:measures>
											<viz.data:MeasureDefinition name="Crédit" value="{Credit}" displayValue="{DescAffectation}"/>
										</viz.data:measures>
									</viz.data:FlattenedDataset>
								</viz:dataset>
								<viz:feeds>
									<viz.feeds:FeedItem uid="size" type="Measure" values="Débit"/>
									<viz.feeds:FeedItem uid="color" type="Dimension" values="Type"/>
								</viz:feeds>
							</viz:VizFrame>
						</items>
					</VBox>
					<table:Table id="table" selectionMode="MultiToggle" enableSelectAll="true" threshold="150" enableBusyIndicator="true" visibleRowCountMode="Interactive" minAutoRowCount="1" visibleRowCount="0" selectionBehavior="RowSelector" rows="{ path: 'Ecritures', sorter:{path:'Date', descending: true}, templateShareable:false, parameters: {operationMode: 'Server'} }" class="tableStyle" rowSelectionChange="onSelectionTableChange" width="95%">
						<table:noData>
							<BusyIndicator class="sapUiMediumMargin"/>
						</table:noData>
						<table:toolbar>
							<Toolbar>
								<Title id="title" text="Ecritures"/>
								<ToolbarSpacer/>
								<Button icon="sap-icon://add" tooltip="Ajouter une ecriture" press="onAddPress"/>
								<Button icon="sap-icon://less" tooltip="supprimer ecriture" type="Transparent" visible="{objectView>/deleteVisible}" press="onDeletePress"/>
							</Toolbar>
						</table:toolbar>
						<table:columns>
							<table:Column sortProperty="Date" filterProperty="Date" autoResizable="true" width="7rem">
								<Label text="Date"/>
								<table:template>
									<Text text="{path:'Date', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium'}}"/>
								</table:template>
							</table:Column>
							<table:Column sortProperty="AffectationId" filterProperty="AffectationId" autoResizable="true" width="10rem">
								<Label text="Affectation"/>
								<table:template>
									<ComboBox items="{path:'appView>/Affectations', templateShareable:false}" maxWidth="" selectedKey="{AffectationId}" selectionChange="onAffectationChange">
										<items>
											<core:ListItem text="{appView>Description}" key="{appView>id}"/>
										</items>
									</ComboBox>
								</table:template>
							</table:Column>
							<table:Column sortProperty="Description" filterProperty="Description" autoResizable="false">
								<Label text="Description"/>
								<table:template>
									<Text text="{Description}"/>
								</table:template>
							</table:Column>
							<table:Column filterProperty="Debit" width="7rem">
								<Label text="Debit"/>
								<table:template>
									<ObjectNumber number="{ path: 'Debit', type:'sap.ui.model.type.Float', formatOptions: { minFractionDigits: 2, maxFractionDigits: 2 } }" textAlign="End"/>
								</table:template>
							</table:Column>
							<table:Column filterProperty="Credit" width="7rem">
								<Label text="Credit"/>
								<table:template>
									<ObjectNumber number="{ path: 'Credit', type:'sap.ui.model.type.Float', formatOptions: { minFractionDigits: 2, maxFractionDigits: 2 } }" textAlign="End"/>
								</table:template>
							</table:Column>
							<table:Column width="4rem" hAlign="Center">
								<Label text="Carte"/>
								<table:template>
									<core:Icon src="{path:'Carte', formatter:'.formatter.isCard' }" tooltip="Carte de Credit" size="1.5rem" color="#FFD700">
										<core:customData>
										<core:CustomData value="{Carte}"/>
										</core:customData>
									</core:Icon>
								</table:template>
							</table:Column>
						</table:columns>
					</table:Table>
				</items>
			</HBox>
		</semantic:content>
		<semantic:saveAction>
			<semantic:SaveAction visible="{objectView>/saveVisible}" press="onSavePress"/>
		</semantic:saveAction>		
		<semantic:customFooterContent>
			<u:FileUploader id="fileUploader" name="myFileUpload" tooltip="Charger un fichier ecriture" uploadComplete="handleUploadComplete" buttonOnly="true" icon="sap-icon://upload" iconOnly="true" change="onFileChange"/>
		</semantic:customFooterContent>
		<semantic:customFooterContent>
			<Button icon="sap-icon://credit-card" press="onCardPress" visible="{objectView>/carteVisible}" />
		</semantic:customFooterContent>

	</semantic:FullscreenPage>
</mvc:View>