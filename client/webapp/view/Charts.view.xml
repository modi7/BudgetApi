<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:viz="sap.viz.ui5.controls" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds" xmlns:viz.data="sap.viz.ui5.data"
	controllerName="budget.controller.Charts">
	<sap.m.semantic:FullscreenPage xmlns:sap.m.semantic="sap.m.semantic" title="Semantic Page" id="__page0">
		<sap.m.semantic:content>
			<!--			<Panel id="__panel0" headerText="Sélection">
				<content>
					<ComboBox items="{appView>/years}" maxWidth="" selectedKey="{objectView>/year}" selectionChange="onSelectionChange">
						<items>
							<core:ListItem text="{appView>description}" key="{appView>id}"/>
						</items>
					</ComboBox>
					<ComboBox items="{appView>/months}" maxWidth="" selectedKey="{objectView>/month}" selectionChange="onSelectionChange">
						<items>
							<core:ListItem text="{appView>description}" key="{appView>id}"/>
						</items>
					</ComboBox>
				</content>
			</Panel>-->
			<sap.ui.layout.form:SimpleForm editable="true" layout="ResponsiveGridLayout" xmlns:sap.ui.layout.form="sap.ui.layout.form" id="__form0">
				<sap.ui.layout.form:content>
					<Label text="Comptes"/>
					<ComboBox items="{/Balance}" maxWidth="" selectedKey="{objectView>/month}" selectionChange="onSelectionChange">
						<items>
							<core:ListItem text="{Description}" key="{Name}"/>
						</items>
					</ComboBox>
					<Label text="Période"/>
					<ComboBox items="{appView>/years}" maxWidth="" selectedKey="{objectView>/year}" selectionChange="onSelectionChange">
						<items>
							<core:ListItem text="{appView>description}" key="{appView>id}"/>
						</items>
					</ComboBox>
					<ComboBox items="{appView>/months}" maxWidth="" selectedKey="{objectView>/month}" selectionChange="onSelectionChange">
						<items>
							<core:ListItem text="{appView>description}" key="{appView>id}"/>
						</items>
					</ComboBox>
				</sap.ui.layout.form:content>
			</sap.ui.layout.form:SimpleForm>
			<viz:VizFrame id="idVizFrame" uiConfig="{applicationSet:'fiori'}" height='100%' width="100%" vizType='combination'>
				<viz:dataset>
					<viz.data:FlattenedDataset data="{ path: '/Repartitions', sorter:{path:'DescAffectation'}}">
						<viz.data:dimensions>
							<viz.data:DimensionDefinition name="Mois" value="{Month}"/>
						</viz.data:dimensions>
						<viz.data:measures>
							<viz.data:MeasureDefinition name="Dépenses" value="{Debit}"/>
							<viz.data:MeasureDefinition name="Revenue" value="{Credit}"/>
						</viz.data:measures>
					</viz.data:FlattenedDataset>
				</viz:dataset>
				<viz:feeds>
					<viz.feeds:FeedItem uid="valueAxis" type="Measure" values="Dépenses"/>
					<viz.feeds:FeedItem uid="valueAxis" type="Measure" values="Revenue"/>
					<viz.feeds:FeedItem id="feedCategoryAxis" uid="categoryAxis" type="Dimension" values="Mois"/>
				</viz:feeds>
			</viz:VizFrame>
		</sap.m.semantic:content>
	</sap.m.semantic:FullscreenPage>
</mvc:View>